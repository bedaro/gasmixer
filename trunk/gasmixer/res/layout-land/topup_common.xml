<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res/divestoclimb.gasmixer">
	<divestoclimb.gasmixer.widget.TrimixSelector
		android:id="@+id/topup"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/topup_start_pres" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/topup"
		android:layout_alignParentLeft="true"
		android:layout_marginTop="5dp"
		android:text="@string/topup_pres"
		android:textSize="20sp" />
	<Button
		android:id="@+id/button_topup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/topup"
		android:layout_alignParentRight="true"
		android:text="@string/topup"/>
	<divestoclimb.android.widget.NumberSelector
		android:id="@+id/topup_final_pres"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/button_topup"
		android:layout_alignTop="@id/button_topup"
		app:textboxwidth="75sp" />
</merge>